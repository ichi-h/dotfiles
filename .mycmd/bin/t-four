#!/usr/bin/zsh

tmux split-window -v
tmux split-window -h
tmux select-pane -t 0
tmux split-window -h
tmux select-pane -t 0

if [ -n "$1" ]; then
  name=`basename $1`
  tmux rename-window $name

  tmux send-keys -t 0 "cd $1" Enter
  tmux send-keys -t 1 "cd $1" Enter
  tmux send-keys -t 2 "cd $1" Enter
  tmux send-keys -t 3 "cd $1" Enter
fi
